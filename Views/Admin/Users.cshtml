@model List<SocialMvc.Models.ApplicationUser>
<h1>Users</h1>
<table border="1">
    <tr>
        <th>Email</th>
        <th>Actions</th>
    </tr>
    @foreach (var u in Model)
    {
        <tr>
            <td>@u.Email</td>
            <td>
                <a href="@Url.Action("EditRoles", new { id = u.Id })">Edit Roles</a> |
                <form method="post" asp-action="LockUnlock" style="display:inline;">
                    <input type="hidden" name="id" value="@u.Id" />
                    <button type="submit">Lock/Unlock</button>
                </form>
            </td>
        </tr>
    }
</table>
